{
  "templates":
    [
      {
        "match": { "exp": "time", "config": "java", "procs": "(?!1$)" },
        "template": "/usr/bin/time -v numactl -i all -- java -XX:+UseG1GC -XX:ParallelGCThreads=<procs> -Djava.util.concurrent.ForkJoinPool.common.parallelism=<procs> <bench> <args?{}> <args1?{}> -repeat 20 -warmup 5"
      },
      {
        "match": { "exp": "time", "config": "java" },
        "template": "/usr/bin/time -v java -XX:+UseG1GC -XX:ParallelGCThreads=<procs> -Djava.util.concurrent.ForkJoinPool.common.parallelism=<procs> <bench> <args?{}> <args1?{}> -repeat 20 -warmup 5"
      },
      {
        "match": { "exp": "space", "config": "java", "procs": "(?!1$)" },
        "template": "/usr/bin/time -v numactl -i all -- java -XX:+UseG1GC -XX:ParallelGCThreads=<procs> -Djava.util.concurrent.ForkJoinPool.common.parallelism=<procs> <bench> <args?{}> <args1?{}> -repeat 20 -warmup 0"
      },
      {
        "match": { "exp": "space", "config": "java" },
        "template": "/usr/bin/time -v java -XX:+UseG1GC -XX:ParallelGCThreads=<procs> -Djava.util.concurrent.ForkJoinPool.common.parallelism=<procs> <bench> <args?{}> <args1?{}> -repeat 20 -warmup 0"
      }
    ],

  "globals":
    {
      "config": ["java"],
      "cwd": ["java"],
      "exp": ["time", "space"],
      "trials": ["1"]
    },

  "jqselect": "(true)",

  "specs":
    [
      {
        "tag": ["sort-longs"],
        "bench": ["SortLongs"],
        "args": ["-n 20000000"]
      },
      {
        "tag": ["primes"],
        "bench": ["Primes"],
        "args": ["-n 100000000"]
      },
      {
        "tag": ["tokens"],
        "bench": ["Tokens"],
        "args": ["-input ../inputs/words256.txt"]
      }
    ]
}
